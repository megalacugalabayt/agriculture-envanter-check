@model IEnumerable<agriculture1.Models.Entity.customer>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #eeeee4;
    }
</style>

<h2>CUSTOMERS</h2>
<br>

<table style="background-color: #faedd8;   border-width:10px" class="table table-bordered">
    <tr>

        <th>CUSTOMER NAME</th>
        <th>CUSTOMER SURNAME </th>
        <th>CUSTOMER ADDRESS </th>
        <th>CUSTOMER MAIL </th>
        <th>CUSTOMER PASSWORD </th>
        <th>EDIT BUTTON</th>
        <th>READ BUTTON</th>
        <th>DELETE BUTTON</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.cusname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cussurname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cusadress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.customermail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.customerpassword)
                </td>
                <td>
                    <center><h3>     <a href="/Customer/Edit/@item.customerıd" class="bi bi-pencil-square"></a></h3></center>
                </td>
                <td>
                    <center><h3>     <a href="/Customer/Details/@item.customerıd" class="bi bi-info-circle"></a></h3></center>
                </td>
                <td>
                    <center><h3>     <a href="/Customer/Delete/@item.customerıd" class="bi bi-trash3"></a></h3></center>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    @Html.ActionLink("Add New Customer", "Create")
</p>