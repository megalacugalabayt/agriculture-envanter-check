@model IEnumerable<agriculture1.Models.Entity.medicine>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #eeeee4;
    }
</style>

<h2>MEDICINES</h2>
<br>

<table style="background-color: #faedd8;   border-width:10px" class="table table-bordered">
    <tr>

        <th>MEDICINE NAME</th>
        <th>MEDICINE PRICE </th>

        <th>EDIT BUTTON</th>
        <th>READ BUTTON</th>
        <th>DELETE BUTTON</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.medname)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.medprice)
                </td>

                <td>
                    <center><h3>   <a href="/Medicine/Edit/@item.medıd" class="bi bi-pencil-square"></a> </h3></center>
                </td>

                <td>
                    <center><h3>   <a href="/Medicine/Details/@item.medıd" class="bi bi-info-circle"></a> </h3></center>
                </td>

                <td>
                    <center><h3>    <a href="/Medicine/Delete/@item.medıd" class="bi bi-trash3"></a> </h3></center>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    @Html.ActionLink("Add New Medicine", "Create")
</p>