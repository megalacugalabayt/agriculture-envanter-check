@model IEnumerable<agriculture1.Models.Entity.orders>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #eeeee4;
    }
</style>


<h2>ORDERS</h2>

<br>



<table style="background-color: #faedd8;   border-width:10px" class="table table-bordered">
    <tr>

        <th>ORDERER NAME</th>
        <th>ORDER SURNAME</th>
        <th>ORDERED MEDICINE NAME</th>
        <th>ORDERED DEALER NAME </th>
        <th>ORDER ADVISER</th>
        <th>ORDER NUMBER</th>
        <th>EDIT BUTTON</th>
        <th>READ BUTTON</th>
        <th>DELETE BUTTON</th>
    </tr>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ordercusname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ordercussurname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ordermedname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.orderdealername)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.orderadvisername)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ordernumber)
                </td>
                <td>
                    <center><h3>   <a href="/Order/Edit/@item.orderıd" class="bi bi-pencil-square"></a></h3> </center>
                </td>

                <td>
                    <center><h3>    <a href="/Order/Details/@item.orderıd" class="bi bi-info-circle"></a> </h3></center>
                </td>

                <td>
                    <center><h3>    <a href="/Order/Delete/@item.orderıd" class="bi bi-trash3"></a> </h3></center>
                </td>
            </tr>
        }
       
    </tbody>
</table>
<p>
    @Html.ActionLink("Add New Order", "Create")
</p>